# Fuel Logistics - Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_USER=fuel_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=fuel_logistics

# ===========================================
# BACKEND
# ===========================================
# JWT secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# OpenRouteService API key (optional, for routing features)
# Get a free key at: https://openrouteservice.org/
ORS_API_KEY=

# ===========================================
# DEPLOYMENT
# ===========================================
# Port to expose the application (default: 8080)
EXPOSE_PORT=8080
